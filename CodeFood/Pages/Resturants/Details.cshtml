@page "{resturantId:int}"
@model CodeFood.Pages.Resturants.DetailsModel
@{
}

<h2>@Model.resturants.Name</h2>

@if (Model.Message != null)
{
    <div class="alert alert-info">@Model.Message</div>
}

<div>
    Resturant ID: @Model.resturants.Id
</div>
<div>
    Resturant Location: @Model.resturants.Location
</div>

<div>
    Resturant Cuisine: @Model.resturants.Cuisine
</div>

<a asp-page="./List" class="btn btn-default">All Resturants</a>