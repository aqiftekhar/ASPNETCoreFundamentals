@using CodeFood.Core
@model Resturant

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Name</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Location</span>
        <span>Cuisine: @Model.Cuisine</span>
    </div>
    <div class="panel-footer">
        <a class="btnbtn-lg" asp-page="./Details" asp-route-resturantId="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>

        <a class="btnbtn-lg" asp-page="./Edit" asp-route-resturantId="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>

        <a class="btnbtn-lg" asp-page="./Delete" asp-route-resturantId="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>
</div>